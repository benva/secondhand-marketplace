extends layout

block content
  if (!user)
    a(href="/login") Login
    br
    a(href="/users/register") Register
  if (user)
    p You are currently logged in as 
      a(href="/users/#{user.username}") #{user.username}
    a(href="/listings/create") Create listing
    br
    a(href="/logout") Logout
  form(method="get" action="/")
    input(type="text", placeholder="raf simons, rick owens, usually what im... ", name="search")
    button(type="submit") Submit
  ul
    if (listings.length === 0)
      h1 There are no results,  click here to return to 
        a(href="/") home
    each listing, i in listings
      li
        a(href="/listings/#{listing._id}") #{listing.designer} -  #{listing.title}
