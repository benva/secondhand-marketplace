extends layout

block content
  if(error)
    p !{error.replace(/\n/g, "<br>")}
  br
  form(name="register",method="post",action="/users/register")
    input(required, type="hidden", name="_csrf", value=csrfToken)
    if(username)
      input(required, type="text", placeholder="Username", name="username", value="#{username}")
    else    
      input(required, type="text", placeholder="Username", name="username")
    br
    input(required, type="text", placeholder="Password", name="password")
    br
    if(email)
      input(required, type="text", placeholder="E-mail", name="email", value="#{email}")
    else
      input(required, type="text", placeholder="E-mail", name="email")
    br
    button#btnSubmit(type="submit") Submit
